<%= form_with(url: batches_path, method: :post, scope: :batch, class:"my-5 p-3") do |f| %>
  <%= f.text_field :name, value: Batch.find(params[:batch_id]).name, class: "text-purple-500" %>
  <%= f.hidden_field :id, value: params[:batch_id] %>
  <%= f.submit "Save", class: "bg-purple-500 px-2 py-1 mt-2 hover:bg-purple-400 transition:ease-in duration-300 rounded-md text-white" %>
<% end %>
