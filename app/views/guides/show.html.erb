<div class="relative top-20 px-8 py-10 bg-gray-50">
  <div class="max-w-md mx-auto border-t-4 border-purple-500 shadow-lg rounded-lg p-6 space-y-4 my-5">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Guide Login</h1>

    <%= form_with url: guides_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, "Guide Name", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :name, 
          class: "block w-full px-4 py-2 text-gray-700 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500", value: params[:guide_name], disabled: true %>
    </div>
    <div class="mb-4">
      <%= f.label :password, "Password", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, 
          class: "block w-full px-4 py-2 text-gray-700 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>
    <%= f.hidden_field :guide_name, value: params[:guide_name] %>
    
    <div class="mb-4">
      <%= f.select :category, options_for_select([["Guide", "Guide"], ["Reviewer 1", "Reviewer 1"], ["Reviewer 2", "Reviewer 2"]]), { prompt: "Login As" }, class: "form-select w-full border border-gray-300 rounded-lg p-2 my-5 shadow-lg" %>
    </div>

    <div>
      <%= f.submit "Login", 
          class: "w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition duration-300" %>
    </div>
    <% end %>
  </div>
</div>