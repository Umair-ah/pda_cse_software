<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="bg-white shadow-md rounded-lg border-t-4 border-purple-500 p-6 mb-6">
    <h2 class="text-xl font-bold text-purple-700 mb-4">Update Guide Information</h2>

    <%= form_with model: @guide, url: update_two_guides_path, method: :post, local: true do |f| %>
      <!-- Name Field -->
      <div class="mb-4">
        <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" %>
      </div>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" %>
      </div>

      <!-- Section Field -->
      <div class="mb-4">
        <%= f.label :section, "Section", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :section, options_for_select([["A", "A"], ["B", "B"], ["C", "C"]], @guide.section), { prompt: "Select Section" }, 
          class: "form-select block w-full border border-gray-300 rounded-lg p-2 shadow-md focus:ring-purple-500 focus:border-purple-500" %>
      </div>

      <!-- Hidden Field -->
      <%= f.hidden_field :guide_id, value: @guide.id %>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Update Guide", 
          class: "w-full bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-500 focus:ring-4 focus:ring-purple-400 transition-shadow duration-300" %>
      </div>
    <% end %>
  </div>
</div>
