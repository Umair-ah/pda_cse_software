<div class="relative top-20 px-8 py-10 border-y-4 border-purple-500 shadow-lg rounded-lg p-6 space-y-4 my-5">
  <div class="max-w-xl mx-auto text-center">
    <%= link_to "Back", :back, class: "text-rose-600 text-lg font-semibold" %>

    <h1 class="text-3xl font-bold text-gray-800 mb-6">Enter Guide Name</h1>

    <%= form_with url: guides_path, method: :get, local: true do |form| %>
    <div class="mb-6">
      <%= form.text_field :query, placeholder: "Enter Guide Name", 
          class: "block w-full text-gray-700 border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>
    <div>
      <%= form.submit "Search", 
          class: "w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition duration-300" %>
    </div>
    <% end %>
  </div>

  <div class="max-w-4xl mx-auto mt-8">
    <table class="table-auto w-full border-collapse border border-gray-300 bg-white shadow-md">
      <thead>
        <tr class="bg-gray-100">
          <th class="border border-gray-300 px-4 py-2 text-left text-gray-600 font-semibold">Guide Name</th>
          <th class="border border-gray-300 px-4 py-2 text-left text-gray-600 font-semibold">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @guides.each do |guide| %>
        <tr class="hover:bg-gray-50">
          <td class="border border-gray-300 px-4 py-2 text-red-500"><%= guide.name %></td>
          <td class="border border-gray-300 px-4 py-2"><%= link_to "Log In", guide_path(guide, guide_name: guide.name), class:"text-purple-600 hover:text-purple-700" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>