<nav class="text-center text-3xl text-purple-600 mb-6">
  <span class="font-semibold text-purple-800">Logged In As <%= Guide.find(session[:guide_id]).type %></span>
</nav>
<div class="container mx-auto px-6 py-10 md:p-32">
  <% @guides.each do |guide| %>
    <div class="bg-white shadow-lg rounded-lg border-t-4 border-purple-500 hover:shadow-xl transition-shadow duration-200 ease-in-out">
      <div class="p-6">
        <h3 class="text-lg font-bold text-purple-700 hover:text-purple-500 truncate">
          <%= link_to guide.name, guide_show_two_path(guide, name: guide.name) %>
        </h3>
        <p class="text-sm text-gray-600 mt-2">Change Password of <b><%= guide.name %></b></p>
      </div>
    </div>
  <% end %>
</div>