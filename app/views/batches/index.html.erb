<% unless session[:guide_id] %>
  <div class="container mx-auto px-6 py-10">
    <!-- Form Section -->
    <div class="bg-white shadow-md rounded-lg border-t-4 border-purple-500 p-6 mb-6">
      <h2 class="text-2xl font-semibold text-purple-600 mb-4">Create a New Batch</h2>
      <%= form_with(model: @batch, url: create_two_batches_path, local: true, class: "space-y-6") do |f| %>

        <!-- Name Field -->
        <div>
          <%= f.label :name, "Batch Name", class: "block text-purple-600 font-medium mb-2" %>
          <%= f.text_field :name, class: "block w-full border-2 border-purple-300 rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Create Batch", class: "bg-purple-600 text-white font-medium py-2 px-4 rounded-lg shadow-md hover:bg-purple-500 focus:ring-4 focus:ring-purple-400 transition:ease-in duration-300" %>
        </div>
      <% end %>
    </div>
<% end %>

  <!-- Batches Section -->
  <div id="batches" class="md:p-32 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <%= render "shared/batches" %>
  </div>
</div>
