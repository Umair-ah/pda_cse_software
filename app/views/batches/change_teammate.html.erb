<%= form_with url: change_teammate_post_batches_path, method: :post do |f| %>
  <%= f.collection_select :student_id, Student.where(id: params[:student_id], batch_id: params[:batch_id], section: Guide.find(session[:guide_id]).section), 
            :id, 
            ->(student) { "#{student.usn} (#{student.name})" } %>


  <%= f.collection_select :student_id, Project.where(batch_id: params[:batch_id]), 
            :id, 
            ->(project) { " #{project.title}" } %>


<% end %>